     related to the state of network and IoT Cloud connection and errors
     the higher number the more granular information youâ€™ll get.
     The default is 0 (only errors).
     Maximum is 4
 */
  setDebugMessageLevel(2);
  ArduinoCloud.printDebugInfo();
}
const char *deli =" ";

void loop() {
  ArduinoCloud.update();
  
  if (Serial.available() > 0 ) {
    String data = Serial.readStringUntil('\n'); //Read String until end of line
    const char* cdata = data.c_str(); //Convert string to array of characters
    char * strdata = strdup(cdata); //Duplicate the array
    char *ctemperature = strtok(strdata, deli); //Split the array until 1st space
    char *chumidity = strtok(NULL, deli); //2nd space
    char *csoilMoisture = strtok(NULL, deli); //3rd space
    char *cET = strtok(NULL, deli); //4th space
    char *cUpTime = strtok(NULL, deli); //5th space
    //Convert characters to floats
    temperature = atof(ctemperature); 
    humidity = atof(chumidity);
    soilMoisture = atof(csoilMoisture);
    ET = atof(cET);
    upTime = atof(cUpTime);
  }
}

